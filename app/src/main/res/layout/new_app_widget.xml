<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.CryptoPriceWidget.AppWidgetContainer"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/cardano_icon"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/cardano_cryptocurrency" />


        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="255dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/title"
                android:layout_width="255dp"
                android:layout_height="20dp"
                android:contentDescription="@string/appwidget_text"
                android:text="ADA (Cardano)"
                android:textColor="@color/white"
                android:textSize="16dp"
                android:textStyle="bold" />

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal" >

                <TextView
                    android:id="@+id/price"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/appwidget_text"
                    android:textColor="@color/white"
                    android:text="Connecting..."
                    android:textSize="17sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/exchange"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/white"
                    android:contentDescription="@string/appwidget_text"
                    android:textSize="15sp"
                    android:textStyle="normal" />
            </LinearLayout>

            <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:layout_width="255dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                    <TextView
                        android:id="@+id/mc_text"
                        android:layout_width="130dp"
                        android:layout_height="20dp"
                        android:contentDescription="@string/appwidget_text"
                        android:text="Market Cap"
                        android:textColor="@color/grey"
                        android:textSize="13dp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/market_cap"
                        android:layout_width="130dp"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/appwidget_text"
                        android:textColor="@color/white"
                        android:text="Connecting..."
                        android:textSize="15sp"
                        android:textStyle="normal" />

                </LinearLayout>

                <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >
                    <TextView
                        android:id="@+id/vol_text"
                        android:layout_width="125dp"
                        android:layout_height="20dp"
                        android:contentDescription="@string/appwidget_text"
                        android:text="24h"
                        android:textColor="@color/grey"
                        android:textSize="13dp"
                        android:textStyle="normal" />

                    <TextView
                        android:id="@+id/volume"
                        android:layout_width="125dp"
                        android:layout_height="wrap_content"
                        android:contentDescription="@string/appwidget_text"
                        android:textColor="@color/white"
                        android:text=""
                        android:textSize="15sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</RelativeLayout>